<Window x:Class="BackgrounderWorker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BackgrounderWorker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Label Name="lb1" VerticalAlignment="Bottom"></Label>
        <ProgressBar Name="pro1" Grid.Row="1" Height="50" VerticalAlignment="Top"></ProgressBar>
        <Button Grid.Row="2" Name="btn_Start" Content="开始" Width="150" Height="70" HorizontalAlignment="Left" Click="btn_Start_Click"></Button>
        <Button Grid.Row="2" Name="btn_End" Content="停止" Width="150" Height="70" HorizontalAlignment="Right" Click="btn_End_Click"></Button>
    </Grid>

</Window>
