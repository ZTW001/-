<Window x:Class="跟随鼠标移动的小球.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:跟随鼠标移动的小球"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Yellow" Loaded ="Window_Loaded">
    
    <Grid>
        <Canvas Name="ThisCanvas">
            <Path Fill="Red">
                <Path.Data>
                    <EllipseGeometry Center="0,0" RadiusX="10" RadiusY="10" x:Name="Target"/>
                </Path.Data>
            </Path>
        </Canvas>
    </Grid>
</Window>
